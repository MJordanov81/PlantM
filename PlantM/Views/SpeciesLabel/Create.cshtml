                @Html.ActionLink("Add new", "Create", "Family", null, new { @class = "btn btn-default" })
            </div>
        </div>

        <div class="form-group">
            <div class="col-xs-2">
                @Html.LabelFor(model => model.GenusName, htmlAttributes: new { @class = "control-label" })
            </div>
            <div class="col-xs-6">
                @Html.DropDownListFor(model => model.GenusName, new SelectList(ViewBag.GenusList, "Value", "Text"), "Please select...", htmlAttributes: new { @class = "form-control" })
                @Html.ValidationMessageFor(model => model.GenusName, "", new { @class = "text-danger" })
            </div>
            <div class="col-xs-4">
                @Html.ActionLink("Add new", "Create", "Genus", null, new { @class = "btn btn-default" })
            </div>
        </div>

        <div class="form-group">
            <div class="col-xs-2">
                @Html.LabelFor(model => model.SpeciesName, htmlAttributes: new { @class = "control-label" })
            </div>
            <div class="col-xs-6">

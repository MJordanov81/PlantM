            <div class="col-xs-2">
                @Html.LabelFor(model => model.CustomGroupName, htmlAttributes: new { @class = "control-label" })
            </div>
            <div class="col-xs-6">
                @Html.DropDownListFor(model => model.CustomGroupName, new SelectList(ViewBag.CustomGroupList, "Value", "Text"), "Please select...", htmlAttributes: new { @class = "form-control" })
                @Html.ValidationMessageFor(model => model.CustomGroupName, "", new { @class = "text-danger" })
            </div>
            <div class="col-xs-4">
                @Html.ActionLink("Add new", "Create", "CustomGroup", null, new { @class = "btn btn-default" })
            </div>
        </div>

        <div class="form-group">
            <div class="col-xs-2">
                @Html.LabelFor(model => model.FamilyName, htmlAttributes: new { @class = "control-label" })
            </div>
            <div class="col-xs-6">
                @Html.DropDownListFor(model => model.FamilyName, new SelectList(ViewBag.FamilyList, "Value", "Text"), "Please select...", htmlAttributes: new { @class = "form-control" })
                @Html.ValidationMessageFor(model => model.FamilyName, "", new { @class = "text-danger" })

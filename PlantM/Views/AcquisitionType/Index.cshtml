@using Microsoft.Ajax.Utilities
@using PlantM.Helpers
@model IEnumerable<PlantM.Models.PlantModels.AcquisitionType>

@{
    ViewBag.Title = "Index";
}

<h2>Acquisition types</h2>
@Html.ActionLink("Create New", "Create").If(User.IsInRole("Admin"))

<table class="table">
    <tr>
        <th>@Html.DisplayNameFor(model => model.Name)</th>
        <th></th>
    </tr>

    @foreach (var item in Model) {
        <tr>
            <td>
                @Html.DisplayFor(modelItem => item.Name)
            </td>
            <td>
                @Html.ActionLink("Delete", "Delete", new {id = item.Name}).If(User.IsInRole("Admin"))
            </td>
        </tr>
    }

</table>




<div class="btn btn-default">
    @Html.ActionLink("Back to vendor", "Index", "Vendor")
</div>



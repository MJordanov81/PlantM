@using System.Activities.Expressions
@{
    Layout = "~/Views/Shared/_Layout.cshtml";
}

@{
    ViewBag.Title = "Empty table";
}

<h2>Empty table</h2>

@using (Html.BeginForm())
{
    @Html.AntiForgeryToken()

    <div class="form-horizontal">
        <hr />
        @Html.ValidationSummary(true, "", new { @class = "text-danger" })

        <div class="form-group">
            @Html.Label("Table", htmlAttributes: new { @class = "control-label col-md-2" })
            <div class="col-md-10">
                @Html.DropDownList("Tables", null, htmlAttributes: new { @class = "form-control" })
            </div>
        </div>
        <div class="form-group">
            <div class="col-md-offset-2 col-md-10">
                <input type="submit" value="Empty" class="btn btn-default" />
            </div>
        </div>
    </div>
}

<button class="btn btn-primary">@Html.ActionLink("Back", "Index", "Administrator")</button>



<h4>@ViewBag.Message</h4>

@section Scripts {
    @Scripts.Render("~/bundles/jqueryval")
}








